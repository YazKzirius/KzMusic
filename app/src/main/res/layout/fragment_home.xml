<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".HomeFragment">

    <!-- Main Scrollable Content -->
    <!-- The outer LinearLayout is now the primary container for the new list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginBottom="80dp">

        <!-- App Logo (Unchanged) -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:scaleType="centerCrop" />

        <!-- === MODIFIED STRUCTURE STARTS HERE === -->
        <!-- The 2x2 grid has been replaced by a single column of horizontal items. -->

        <!-- Item 1: Your Radio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/ic_radio"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_radio" />

            <TextView
                android:id="@+id/your_radio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Your Radio"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Item 2: Made for You -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/ic_for_you"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_for_you" />

            <TextView
                android:id="@+id/made_for_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Made for You"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Item 3: Your Top 100 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/ic_podium"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_podium" />

            <TextView
                android:id="@+id/top_songs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Your Top 100"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Item 4: Liked Songs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageButton
                android:id="@+id/liked_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_liked"
                android:scaleType="centerInside"
                android:contentDescription="Liked Songs" />

            <TextView
                android:id="@+id/liked_songs_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="Liked Songs"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- === MODIFIED STRUCTURE ENDS HERE === -->

    </LinearLayout>

    <!-- Playback Bar (Unchanged) -->
    <RelativeLayout
        android:id="@+id/playback_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#111"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/current_song_art"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_library"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/song_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/current_song_art"
            android:layout_toStartOf="@id/up_button"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/current_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Untitled"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/current_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Artist"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/up_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_up"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </RelativeLayout>

</FrameLayout>