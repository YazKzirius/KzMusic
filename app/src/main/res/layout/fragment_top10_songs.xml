<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    tools:context=".Top10Songs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginBottom="70dp"> <!-- leaves space above bottom bar -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/x_most_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Most Played Songs"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_songs_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/playback_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#111"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/current_song_art"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_library"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/song_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/current_song_art"
            android:layout_toStartOf="@id/up_button"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/current_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Untitled"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/current_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Artist"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/up_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_up"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white" />
    </RelativeLayout>

</FrameLayout>