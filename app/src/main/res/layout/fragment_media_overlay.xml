<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaOverlay"
    android:background = "#090909">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="#090909">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/musicImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_library" />

            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:id="@+id/song_playing_gif"
                android:layout_gravity="center"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#090909"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCurrentTime"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/textTotalDuration"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="0:00"
                android:textSize="20sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#090909"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp">

            <ImageButton
                android:id="@+id/btnLoop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="2dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_loop" />

            <ImageButton
                android:id="@+id/btnSkipLeft"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_skipleft"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_pause"
                android:background="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/btnSkipRight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_skipright"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_shuffle"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="200"
            android:progress="100"
            android:paddingEnd="8dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/speed_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Speed + pitch: 1.0x"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBarReverb"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="200"
            android:progress="100"
            android:paddingEnd="8dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/reverb_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Reverberbation: 0%"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:max="1000"
            android:min="-1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text="No lyrics"
            android:id="@+id/lyrics_view"/>

    </LinearLayout>

</FrameLayout>