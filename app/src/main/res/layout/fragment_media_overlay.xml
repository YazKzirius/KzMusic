<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A0A0A"
    android:id="@+id/media_overlay"
    tools:context=".MediaOverlay">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Header with down/menu buttons (Unchanged) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/down_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_down"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Now Playing"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/menu_btn2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_colon"
                    app:tint="@color/white" />
            </LinearLayout>

            <!--
            [THE FIX]
            This section is replaced. Instead of a FrameLayout that just stacks views,
            we use a ConstraintLayout to perfectly center the circular album art
            on top of the visualizer, which now acts as the background.
            -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="20dp">

                <!-- The Visualizer draws the bars in the background -->
                <com.example.kzmusic.VisualizerView
                    android:id="@+id/visualizerView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- The Circular Album Art sits on top in the center -->
                <!-- ShapeableImageView is used to make it a perfect circle -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/musicImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_library"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Song Title (Unchanged) -->
            <TextView
                android:id="@+id/songTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <!-- Speed Slider (Unchanged) -->
            <SeekBar
                android:id="@+id/seekBarSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="100"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed: 1.0x"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <!-- Pitch Slider (Unchanged) -->
            <SeekBar
                android:id="@+id/seekBarPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="100"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/pitch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pitch: 1.0x"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <!-- Reverb Slider (Unchanged) -->
            <SeekBar
                android:id="@+id/seekBarReverb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/reverb_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reverberation: 0%"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="4dp" />

            <!-- Progress Bar and Playback Controls Container (Unchanged) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_horizontal">

                <!-- Progress Bar Row (Unchanged) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/textCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/textTotalDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Playback Controls Row (Unchanged) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="7"
                    android:paddingVertical="6dp">

                    <ImageButton
                        android:id="@+id/btnLoop"
                        style="@style/OverlayControlButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_loop"
                        android:scaleType="centerInside"
                        android:contentDescription="Loop" />

                    <ImageButton
                        android:id="@+id/btnRewind"
                        style="@style/OverlayControlButton"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_rewind"
                        android:scaleType="centerInside"
                        android:contentDescription="Rewind" />

                    <ImageButton
                        android:id="@+id/btnSkipLeft"
                        style="@style/OverlayControlButton"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_skipleft"
                        android:scaleType="centerInside"
                        android:contentDescription="Skip Left" />

                    <ImageButton
                        android:id="@+id/btnPlayPause"
                        style="@style/OverlayControlButton"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_pause"
                        android:scaleType="centerInside"
                        android:contentDescription="Play/Pause" />

                    <ImageButton
                        android:id="@+id/btnSkipRight"
                        style="@style/OverlayControlButton"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_skipright"
                        android:scaleType="centerInside"
                        android:contentDescription="Skip Right" />

                    <ImageButton
                        android:id="@+id/btnForward"
                        style="@style/OverlayControlButton"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_foward"
                        android:scaleType="centerInside"
                        android:contentDescription="Forward" />

                    <ImageButton
                        android:id="@+id/btnShuffle"
                        style="@style/OverlayControlButton"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_shuffle"
                        android:scaleType="centerInside"
                        android:contentDescription="Shuffle" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>